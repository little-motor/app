<!-- 显示用户微博 -->
<%= render 'layouts/header' %>
<% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4"> 
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.microposts.any? %>
        <h3>内容 (<%= @user.microposts.count %>)</h3> 
        <!-- ol有序标签ul无序标签 -->
        <ol class="microposts">
          <%= render @microposts %> 
          <!--Rails 会把 @microposts 当作一个 对象列表，
           传给 render 方法后，Rails 会自动遍历这个列表，
           然后使用局部视图 _micropost.html.erb 渲染每个对象-->
        </ol>
        <%= will_paginate @microposts %> 
      <% end %>
    </div>
  </div>


<%= @user.name %>, <%= @user.email %>

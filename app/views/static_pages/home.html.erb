<!-- 用户登入时 -->
<% if logged_in? %> 
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <!-- 用户个人信息模块 -->
        <%= render 'shared/user_info' %> 
      </section>

      <section class="micropost_form">
        <!-- 用户编辑模块 -->
        <%= render 'shared/micropost_form' %> 
      </section>
    </aside>  
  </div>

  <div class="col-md-8"> 
    <h3>消息</h3>
    <!-- 显示用户存在的消息 -->
    <%= render 'shared/feed' %>
  </div>



<!-- 用户未登入时 -->
<% else %>
  <div class="center jumbotron">
    <h1>欢迎进入弹幕系统</h1>
  </div>
      
<% end %>